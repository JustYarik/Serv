<p> make a new order </p>
    <!--<form method="get" action="/news">-->
    <form method="post" action="/login/newOrderFromClient">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="email" class="form-control" id="exampleInputEmail1"  value="<%= data.email %>" readonly>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Quantity</label>
            <input type="number" name="orderQuantity" class="form-control" id="orderQuantity" placeholder="should davide by 10">
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="f95" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">95</label>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="psWOG" class="form-check-input" id="exampleCheck2" onclick="selectWOG()">
            <label class="form-check-label" for="exampleCheck1">WOG</label>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="psOKKO" class="form-check-input" id="exampleCheck3" onclick="selectOKKO()">
            <label class="form-check-label" for="exampleCheck1">OKKO</label>
        </div>
        <button type="submit" class="btn btn-primary">Make Order</button>

        <script>
            function selectWOG() { document.getElementById("exampleCheck3").checked = false; }
            function selectOKKO() { document.getElementById("exampleCheck2").checked = false; }
        </script>
    </form>
<p></p>
    <table class="table">
        <tr>
            <th>Order ID</th>
            <th>Quantity</th>
            <th>fuel type</th>
            <th>PS type</th>
            <th>Order date</th>
        </tr>
       <% for(let l=0; l< ordersID.length; l++ ){ %>
            <tr>
                <td><%= ordersID[l] %> </td>
                <td><%= orderorderQuontity[l] %> </td>
                <td><%= orderFuelType[l] %> </td>
                <td><%= orderPatrolStationType[l] %> </td>
                <td><%= orderDate[l] %> </td>
            </tr>


       <% } %>
    </table>

</body>
